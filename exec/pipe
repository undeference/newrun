## Config variables
# PIPE		name of the pipe file (something like .tremded_pipe?)

if [[ "$PIPE" == "" ]]; then
	warn "$_NAME: PIPE is not set"
	exit 2
fi

pipefile="$HOMEPATH/$GAMENAME/$PIPE"

_pipe_available () {
	isrunning && [ -p "$pipefile" ] && return 0
	return 1
}

pipeCmd () {
	if _pipe_available; then
		stringify "$@" > "$pipefile"
	fi
}

pipeStartCmd () {
	pusharg +set com_pipefile "$PIPE"
}

pipeStop () {
	if _pipe_available; then
		Cmd quit "$(stringify "$@")"
		forcequit
	else
		warn "$_NAME: server is not running?"
		exit 255
	fi
	removepid
}
