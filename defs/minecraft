# This is where Minecraft-specific parts belong

_SERVER="$(which java)"
_JAR=minecraft_server.jar

ARGDELIM=" "
QUOTE=double
QUIT=stop

ARGUMENTS=()

minecraftStartCmd () {
	if [ -z "$_JAR" ]; then
		JAR="$_JAR"
	fi
	run=(run $JAVAARGS -jar "$JAR" $ARGS "${run[@]}")
}

minecraftReload () {
	Cmd reload
}
