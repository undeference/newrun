# This is where Minecraft-specific parts belong

_JAVA=java
_SERVER=minecraft_server.jar

ARGDELIM=" "
QUOTE=double
QUIT=stop

ARGUMENTS=(
# type	config name	default value	command line arguments +

)

minecraftStartCmd () {
	unshift run $JAVAARGS -jar "$SERVER"
	push STARTCMD $ARGS
	if [ -z "$JAVA" ]; then
		SERVER="$_JAVA"
	else
		SERVER="$JAVA"
	fi
	warn "Fixed up run=${run[@]} STARTCMD=${STARTCMD[@]} SERVER=$SERVER"
}

Reload () {
	Cmd reload
}
