# This is where Freeciv-specific parts belong

ARGDELIM=" "

# Prefix command line options with this (e.g., "--")
PREFIX="-"

# Server to start
_SERVER="/usr/bin/freeciv-server"

ARGUMENTS=(
# type	config name	default value	command line arguments +
str	PROTOCOL	""		A +
bool	AUTH				a +
str	IP		""		b +
int	DEBUG		0		d +
bool	GUESTS				G +
str	METASERVER	http://meta.freeciv.org/metaserver.phtml
					M +
bool	META				m +
bool	NEWUSERS			N +
int	PORT		2244		p +
str	RANKLOG		""		R +
str	CONFIG		""		r +
str	SERVERID	""		S +
)

QUIT=quit
